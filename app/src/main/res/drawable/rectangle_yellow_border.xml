<?xml version="1.0" encoding="utf-8"?>

<layer-list
	xmlns:android="http://schemas.android.com/apk/res/android">

	<item
		android:top="-8dp"
		android:bottom="-8dp">

		<shape
			android:shape="rectangle">

			<stroke
				android:color="@color/rectangle_yellow"
				android:width="@dimen/rectangle_margin_plus_width" />

			<solid
				android:color="@color/rectangle_yellow_fill" />
		</shape>
	</item>

	<item
		android:top="-32dp"
		android:bottom="-32dp">

		<shape
			android:shape="rectangle">

			<stroke
				android:color="@android:color/black"
				android:width="@dimen/rectangle_margin" />

			<solid
				android:color="@android:color/transparent" />
		</shape>
	</item>
</layer-list>
