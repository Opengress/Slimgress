<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.NoActionBar" />

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:colorBackground">@android:color/black</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="colorAccent">@color/rectangle_cyan</item>
    </style>

    <style name="FadeAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <!-- borrowed from XGlyph2 -->

    <style name="SectionStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">-1dp</item>
        <item name="android:paddingTop">@dimen/activity_margin_half</item>
        <item name="android:paddingBottom">@dimen/activity_margin_half</item>
        <item name="android:paddingRight">@dimen/activity_margin</item>
        <item name="android:paddingLeft">@dimen/rectangle_margin_3quater</item>
        <item name="android:background">@drawable/rectangle_yellow_border</item>
    </style>

    <style name="SectionHeaderStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginBottom">@dimen/gap_margin</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="SectionTitleStyle">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/rectangle_orange</item>
        <item name="android:layout_gravity">top</item>
    </style>

    <style name="SectionBodyStyle">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical|right</item>
    </style>

    <style name="SectionBodySplitStyle" parent="@style/SectionBodyStyle">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="ShortButtonStyle" parent="android:Widget.Button">
        <item name="android:background">@drawable/rectangle_cyan</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ButtonStyle" parent="@style/ShortButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/button_height</item>
        <item name="android:layout_marginLeft">@dimen/gap_margin</item>
        <item name="android:padding">0dp</item>
        <item name="android:textSize">@dimen/text_size_button</item>
    </style>

    <!--
    not sniped from XGlyph2: ShowcaseView styles. Might be useful later.
    amlcurran/showcaseview puts a mask over the screen to place a widget of interest in a ""target""
    and could be interesting for in-game tutorials.
    Like "Now press the hack button" *hack button suddenly becomes very pressable*
    -->

</resources>
