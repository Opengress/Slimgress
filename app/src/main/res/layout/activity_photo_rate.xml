<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/GradientWindow"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/activity_margin"
    android:paddingVertical="@dimen/activity_margin"
    tools:context=".activity.FragmentPhotoRate"
    android:clickable="true"
    android:focusable="true"
    android:importantForAccessibility="no"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/activityPhotoRateTitleBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/activityPhotoRateTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:ellipsize="middle"
            android:singleLine="true"
            android:text=""
            android:textSize="20sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <!--        navigate left to previous image-->
        <!--        <View-->
        <!--            style="@style/SectionHeaderStyle"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:ignore="UseCompoundDrawables,UselessParent">

            <ImageView
                android:id="@+id/activityPhotoRateImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_half"
                android:src="@drawable/no_image"
                android:visibility="visible"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/activityPhotoRateDiscoverer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_margin_half"
                android:text="@string/placeholder_agent_name" />
        </LinearLayout>
        <!--        navigate right to next image-->
        <!--        <View-->
        <!--            style="@style/SectionHeaderStyle"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="UselessLeaf">
        <!--thumbs up button-->
        <!--        <View-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->
        <!--        thumbs up count-->
        <!--        <View-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->
        <!--        add photo button-->
        <!--        <View-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content" />-->
    </LinearLayout>

    <TextView
        android:id="@+id/activityPhotoRateDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <!--    <Button-->
    <!--        android:layout_width="wrap_content"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:text="ADD DESCRIPTION"-->
    <!--        android:enabled="false"-->
    <!--        android:layout_gravity="right"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <Button
        style="@style/ButtonStyle"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_margin="@dimen/activity_margin"
        android:maxWidth="120dp"
        android:padding="12dp"
        android:text="@string/btn_edit" />

        <Button
            style="@style/ButtonStyle"
            android:id="@+id/activityPhotoRateOkButton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_margin"
            android:maxWidth="120dp"
            android:padding="12dp"
            android:text="OK" />
    </LinearLayout>

</LinearLayout>