<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80sp"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical"
    android:paddingLeft="40sp"
    tools:context=".ActivityOps">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78sp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/inventory_childRow_portalKey_ChildImage"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_margin="5sp"
            android:importantForAccessibility="no" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="78sp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/inventory_childRow_portalKey_prettyDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:ellipsize="middle"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="@string/dummy"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/inventory_childRow_portalKey_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5sp"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                android:text="@string/dummy"
                android:textColor="#666"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom">

                <TextView
                    android:id="@+id/inventory_childRow_portalKey_level"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text="@string/dummy"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r1Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_marginLeft="5sp"
                    android:layout_marginTop="2sp"
                    android:layout_marginRight="2sp"
                    android:layout_marginBottom="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r2Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_margin="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r3Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_margin="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r4Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_margin="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r5Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_margin="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r6Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_margin="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r7Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_margin="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <ImageView
                    android:id="@+id/inventory_childRow_portalKey_r8Image"
                    android:layout_width="14sp"
                    android:layout_height="14sp"
                    android:layout_margin="2sp"
                    android:importantForAccessibility="no"
                    android:src="@drawable/no_image" />

                <TextView
                    android:id="@+id/inventory_childRow_portalKey_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:text="@string/dummy"
                    android:textColor="#666"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/white" />

</LinearLayout>
